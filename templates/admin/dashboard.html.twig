{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Tableau de bord d'administration</h1>
    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('user_index') }}" class="text-decoration-none">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">Utilisateurs</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ totalUsers }}</h5>
                        <p class="card-text">Nombre total d'utilisateurs.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_matiere_index') }}" class="text-decoration-none">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Matières</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ totalMatieres }}</h5>
                        <p class="card-text">Nombre total de matières.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_tutoriel_index') }}" class="text-decoration-none">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">Tutoriels</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ totalTutoriels }}</h5>
                        <p class="card-text">Nombre total de tutoriels.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_chapitre_index') }}" class="text-decoration-none">
                <div class="card text-white bg-info mb-3">
                    <div class="card-header">Chapitres</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ totalChapitres }}</h5>
                        <p class="card-text">Nombre total de chapitres.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_commentaire_index') }}" class="text-decoration-none">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-header">Commentaires</div>
                    <div class="card-body">
                        <h5 class="card-title">{{ totalCommentaires }}</h5>
                        <p class="card-text">Nombre total de commentaires.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}
